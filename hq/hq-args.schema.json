{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "HqArgs",
  "type": "object",
  "required": [
    "deployment_db",
    "sites"
  ],
  "properties": {
    "deployment_db": {
      "$ref": "#/definitions/DeploymentDbArgs"
    },
    "sites": {
      "type": "array",
      "items": {
        "$ref": "#/definitions/SiteArgs"
      }
    }
  },
  "definitions": {
    "CloudflareDnsProviderArgs": {
      "type": "object",
      "required": [
        "api_token",
        "asterisk_domain",
        "zone_id"
      ],
      "properties": {
        "api_token": {
          "type": "string"
        },
        "asterisk_domain": {
          "type": "string"
        },
        "zone_id": {
          "type": "string"
        }
      }
    },
    "DeploymentDbArgs": {
      "type": "object",
      "required": [
        "url"
      ],
      "properties": {
        "url": {
          "type": "string"
        }
      }
    },
    "DnsProviderArg": {
      "oneOf": [
        {
          "type": "object",
          "required": [
            "Cloudflare"
          ],
          "properties": {
            "Cloudflare": {
              "$ref": "#/definitions/CloudflareDnsProviderArgs"
            }
          },
          "additionalProperties": false
        }
      ]
    },
    "HostProviderArg": {
      "oneOf": [
        {
          "type": "object",
          "required": [
            "OciContainerInstance"
          ],
          "properties": {
            "OciContainerInstance": {
              "$ref": "#/definitions/OciContainerInstanceHostProviderArgs"
            }
          },
          "additionalProperties": false
        }
      ]
    },
    "OciContainerInstanceHostProviderArgs": {
      "type": "object",
      "required": [
        "availability_domain",
        "compartment_id",
        "envs",
        "fingerprint",
        "image",
        "memory_in_gbs",
        "ocpus",
        "private_key_base64",
        "region",
        "shape",
        "subnet_id",
        "tenancy_id",
        "user_id"
      ],
      "properties": {
        "availability_domain": {
          "type": "string"
        },
        "compartment_id": {
          "type": "string"
        },
        "envs": {
          "type": "object",
          "additionalProperties": {
            "type": "string"
          }
        },
        "fingerprint": {
          "type": "string"
        },
        "image": {
          "type": "string"
        },
        "memory_in_gbs": {
          "type": "number",
          "format": "float"
        },
        "ocpus": {
          "type": "number",
          "format": "float"
        },
        "private_key_base64": {
          "type": "string"
        },
        "region": {
          "type": "string"
        },
        "shape": {
          "type": "string"
        },
        "subnet_id": {
          "type": "string"
        },
        "tenancy_id": {
          "type": "string"
        },
        "user_id": {
          "type": "string"
        }
      }
    },
    "SiteArgs": {
      "type": "object",
      "required": [
        "cert",
        "dns_provider",
        "host_provider"
      ],
      "properties": {
        "cert": {
          "type": "string"
        },
        "dns_provider": {
          "$ref": "#/definitions/DnsProviderArg"
        },
        "host_provider": {
          "$ref": "#/definitions/HostProviderArg"
        }
      }
    }
  }
}